
@{
    ViewBag.Title = "Forget Password";
}

<!-- ========================= SECTION CONTENT ========================= -->

<section class="section-conten padding-y" style="min-height:84vh">
    <!-- ============================ COMPONENT LOGIN   ================================= -->
    <div class="card mx-auto" style="max-width: 380px; margin-top:20px;">
        <div class="card-body login-card-body">
            <h4 class="card-title mb-4">Quên mật khẩu</h4>
            <form method="POST" action=@Url.Action("forget","user")>
                @Html.AntiForgeryToken()
                <div class="input-group mb-3">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                    <input type="email" class="form-control" name="email" placeholder="Email">
                </div> <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Gửi mật khẩu mới  </button>
                </div> <!-- form-group// -->
                <p class="text-center mt-4">Don't have account? <a href=@Url.Action("register","user")>Sign up</a></p>
                <a href="#" class="btn btn-facebook btn-block mb-2"> <i class="fab fa-facebook-f"></i> &nbsp Facebook</a>
                <a href="#" class="btn btn-google btn-block mb-4"> <i class="fab fa-google"></i> &nbsp Google</a>
            </form>
        </div> <!-- card-body.// -->
    </div> <!-- card .// -->
    <!-- ============================ COMPONENT LOGIN  END.// ================================= -->


</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
