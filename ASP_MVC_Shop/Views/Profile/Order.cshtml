@model List<ASP_MVC_Shop.Models.ProfileOrderModel>
@{
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
@if (Model.Count > 0)
{
    foreach (var item in Model)
    {
        <article class="card order-item mb-4">
            <header class="card-header">
                <a href="#" class="float-right"> <i class="fa fa-print"></i> Print</a>
                <strong class="d-inline-block mr-3">Mã đơn hàng: @item.order.id</strong>
                <span>Ngày đặt hàng: @item.order.createDate</span>
            </header>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h6 class="text-muted">Thông tin</h6>
                        <p>
                            @item.order.lastName @item.order.firstName <br>
                            Phone: @item.order.phone  <br>
                            Email: @item.order.email <br>
                            Địa chỉ: @item.order.location <br>
                        </p>
                    </div>
                    <div class="col-md-4">
                        <h6 class="text-muted">Thanh toán</h6>
                        <p>
                            Giá: @string.Format("{0:#,0}", @item.order.totalPrice) đ <br>
                            Giảm: @string.Format("{0:#,0}", @item.order.totalPrice * @item.order.voucherSale / 100) đ <br>
                            Tổng: @string.Format("{0:#,0}", @item.order.totalPrice - @item.order.totalPrice * @item.order.voucherSale / 100) đ <br>
                        </p>
                    </div>
                </div> <!-- row.// -->
            </div> <!-- card-body .// -->
            <div class="table-responsive">
                <table class="table table-hover">
                    <tbody>
                        @if (item.products.Count > 0)
                        {
                            foreach (var product in item.products)
                            {
                                <tr>
                                    <td width="65">
                                        <img src=@product.imageUrl class="img-xs border">
                                    </td>
                                    <td>
                                        <p class="title mb-0">@product.name</p>
                                        <var class="price text-muted">@string.Format("{0:#,0}", @product.price) đ</var>
                                    </td>
                                    <td width="250">
                                        <a href="#" class="btn btn-outline-primary">Track order</a>
                                        <div class="dropdown d-inline-block">
                                            <a href="#" data-toggle="dropdown" class="dropdown-toggle btn btn-outline-secondary">More</a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="#" class="dropdown-item">Return</a>
                                                <a href="#" class="dropdown-item">Cancel order</a>
                                            </div>
                                        </div> <!-- dropdown.// -->
                                    </td>
                                </tr>

                            }
                        }
                    </tbody>
                </table>
            </div> <!-- table-responsive .end// -->
        </article> <!-- card order-item .// -->
    }
}

