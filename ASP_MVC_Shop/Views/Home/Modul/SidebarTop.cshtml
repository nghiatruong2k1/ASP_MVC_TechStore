@model ASP_MVC_Shop.Models.HomeModel
<section class="section-main padding-y">
    <main class="card">
        <div class="card-body">
            <div class="row">
                <aside class="col-lg col-md-3 flex-lg-grow-0">
                    <nav class="nav-home-aside">
                        <h6 class="title-category d-flex">Danh mục:</h6>
                        <ul class="menu-category">

                            @foreach (var item in Model.listCategory)
                            {
                                <li><a href=@Url.Action("category","product",new {alias = @item.alias })>@item.name</a></li>
                            }
                            <li><a href=@Url.Action("category","product",new { alias="xem-tat-ca"})>Xem tất cả</a></li>
                            <!--li class="has-submenu">
                                <a href="#">More items</a>
                                <ul class="submenu">
                                    <li><a href="#">Submenu name</a></li>
                                    <li><a href="#">Great submenu</a></li>
                                    <li><a href="#">Another menu</a></li>
                                    <li><a href="#">Some others</a></li>
                                </ul>
                            </li-->
                        </ul>
                    </nav>
                </aside> <!-- col.// -->
                <div class="col-md-9 col-xl-7 col-lg-7">
                    <!-- ================== COMPONENT SLIDER  BOOTSTRAP  ==================  -->
                    <div id="carousel1_indicator" class="slider-home-banner carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carousel1_indicator" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel1_indicator" data-slide-to="1"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="~/Content/images/sliders/slide1.png" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img src="~/Content/images/sliders/slide2.png" alt="Second slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carousel1_indicator" role="button" data-slide="prev">
                            <span class="fa-arrow-left fa" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carousel1_indicator" role="button" data-slide="next">
                            <span class="fa-arrow-right fa" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                    <!-- ==================  COMPONENT SLIDER BOOTSTRAP end.// ==================  .// -->
                </div> <!-- col.// -->
                <div class="col-md d-none d-lg-block flex-grow-1">
                    <aside class="special-home-right">
                        <h6 class="bg-blue text-center text-white mb-0 p-2">Danh mục phổ biến</h6>

                        @foreach (var item in Model.listCategoryPopular)
                        {

                            <div class="card-banner border-bottom align-items-center">
                                <div style="width:80%">
                                    <h6 class="card-title">@item.name</h6>
                                    <a href=@Url.Action("category","product",new {alias = @item.alias }) class="btn btn-secondary btn-sm"> Xem ngay</a>
                                </div>
                                <img src=@item.imageUrl height="80" class="img-bg">
                            </div>
                        }
                    </aside>
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- card-body.// -->
    </main> <!-- card.// -->

</section>