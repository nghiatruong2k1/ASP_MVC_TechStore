@using ASP_MVC_Shop.Models


<header class="section-header">
    <section class="header-main border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-xl-2 col-lg-3 col-md-2 pr-5">
                    <a href="/" class="brand-wrap">
                        <img src="~/Content/images/logo.png" class="logo contain" />
                    </a>
                </div>
                <div class="col-xl-6 col-lg-5 col-md-6">
                    <form action="" class="search-header form-search">
                        <div class="input-group w-100">
                            <select class="custom-select border-right form-search-type">
                                <option value="" disabled>--Chọn--</option>
                                <option value=@Url.Action("search","product")>Sản phẩm</option>
                                <option value=@Url.Action("search","category")>Danh mục</option>
                                <option value=@Url.Action("search","brand")>Thương hiệu</option>
                            </select>
                            <input type="text" class="form-control" placeholder="Tìm kiếm..." name="query">

                            <div class="input-group-append">
                                <button class="btn btn-info" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form> <!-- search-wrap .end// -->
                </div> <!-- col.// -->

                <div class="col-xl-4 col-lg-4 col-md-6">
                    <div class="widgets-wrap float-md-right">
                        @if (Session["id"] != null)
                        {
                            <div class="widget-header mr-3">
                                <a href="#" class="dropdown-toggle widget-view" data-toggle="dropdown">
                                    <div class="icon-area">
                                        <i class="fa fa-user"></i>

                                    </div>
                                    <small class="text"> @Session["fullName"] </small>
                                </a>
                                <div class="dropdown-menu">
                                    @if (Session["typeId"].Equals(4))
                                    {
                                        <a href="/admin" class="dropdown-item">
                                            <i class="icon fas fa-user-cog"></i>Trang quản trị
                                        </a>
                                    }
                                    <a href=@Url.Action("","profile") class="dropdown-item">
                                        <i class="icon fas fa-user-circle"></i>Thông tin
                                    </a>
                                    <a href=@Url.Action("logout","user") class="dropdown-item">
                                        <i class="icon fas fa-sign-out-alt"></i>Đăng xuất
                                    </a>
                                </div>
                            </div>
                            <div class="widget-header mr-3">
                                <a href="#" class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-comment-dots"></i>
                                        <span class="notify">1</span>
                                    </div>
                                    <small class="text"> Thông báo </small>
                                </a>
                            </div>
                            <div class="widget-header mr-3">
                                <a href=@Url.Action("order","profile") class="widget-view">
                                    <div class="icon-area">
                                        <i class="fa fa-store"></i>
                                        @*<span class="notify">1</span>*@
                                    </div>
                                    <small class="text"> Đơn hàng </small>
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="widget-header mr-3">
                                <a href=@Url.Action("login","user") class="widget-view">
                                    <div class="icon-area">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </div>
                                    <small class="text"> Đăng nhập </small>
                                </a>
                            </div>
                            <div class="widget-header mr-3">
                                <a href=@Url.Action("register","user") class="widget-view">
                                    <div class="icon-area">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </div>
                                    <small class="text"> Đăng ký </small>
                                </a>
                            </div>
                        }
                        <div class="widget-header">
                            <a href=@Url.Action("index","cart") class="widget-view">
                                <div class="icon-area">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span class="notify cart-count">0</span>
                                </div>
                                <small class="text"> Giỏ hàng </small>
                            </a>
                        </div>
                    </div> <!-- widgets-wrap.// -->
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- container.// -->
    </section> <!-- header-main .// -->



    <nav class="navbar navbar-main navbar-container navbar-expand-lg border-bottom">
        <div class="container">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main_nav" aria-controls="main_nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="main_nav">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" href=@Url.Action("","")>Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("","danh-muc")>Danh mục</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href=@Url.Action("","thuong-hieu")>Thương hiệu</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tin tức</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Dịch vụ</a>
                    </li>
                </ul>
                <ul class="navbar-nav ml-md-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tải ứng dụng</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="http://example.com" data-toggle="dropdown">Vietnamese</a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="#">Vietnamese</a>
                            <a class="dropdown-item" href="#">Russian</a>
                            <a class="dropdown-item" href="#">French</a>
                            <a class="dropdown-item" href="#">English</a>
                            <a class="dropdown-item" href="#">Chinese</a>
                        </div>
                    </li>
                </ul>
            </div> <!-- collapse .// -->
        </div> <!-- container .// -->
    </nav>

</header>
<!-- section-header.// -->
