@model ASP_MVC_Shop.Models.ProductDetailModel
@{
    ViewBag.title = Model.product.name;
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<section class="py-3">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-2"> Your are here: </div> <!-- col.// -->
                    <nav class="col-md-8">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <a href=@Url.Action("detail","product",new { id = @Model.product.id})>@Model.product.name</a>
                            </li>
                        </ol>
                    </nav> <!-- col.// -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content bg-white padding-y">
    <div class="container">

        <!-- ============================ ITEM DETAIL ======================== -->
        <div class="row product" data-id="@Model.product.id">
            <aside class="col-md-5">
                <div class="card product-detail-thumbnail">
                    <article class="gallery-wrap">
                        <div class="img-big-wrap">
                            <div><a href="#"><img class="contain" src=@Model.product.imageUrl /></a></div>

                        </div> <!-- slider-product.// -->
                        <!--div class="thumbs-wrap">
                            <a href="#" class="item-thumb"></a>
                            <a href="#" class="item-thumb"></a>
                            <a href="#" class="item-thumb"></a>
                            <a href="#" class="item-thumb"></a>
                        </div-->
                        <!-- slider-nav.// -->
                    </article> <!-- gallery-wrap .end// -->
                </div> <!-- card.// -->
            </aside>
            <main class="col-md-7">
                <article class="product-info-aside">

                    <h2 class="title mt-3">@Model.product.name</h2>

                    <div class="rating-wrap my-3">
                        <ul class="rating-stars">
                            <li style="width:80%" class="stars-active">
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </li>
                            <li>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i> <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </li>
                        </ul>
                        <small class="label-rating text-muted">132 reviews</small>
                        <small class="label-rating text-success"> <i class="fa fa-clipboard-check"></i> 154 orders </small>
                    </div> <!-- rating-wrap.// -->

                    <div class="mb-3 h4">
                        @if (@Model.product.salePrice != null && @Model.product.salePrice > 0)
                        {
                            <span class="price root mt-1">@string.Format("{0:#,0}", @Model.product.price) đ</span>
                            <span> - </span>
                            <span class="price sale mt-1">@string.Format("{0:#,0}", @Model.product.salePrice) đ</span>
                        }
                        else
                        {
                            <span class="price current mt-1">@string.Format("{0:#,0}", @Model.product.price) đ</span>
                        }
                    </div> <!-- price-detail-wrap .// -->

                    <p>
                        @Model.product.shortDes
                    </p>


                    <dl class="row">
                        <dt class="col-sm-3">Manufacturer</dt>
                        <dd class="col-sm-9"><a href="#">Great textile Ltd.</a></dd>

                        <dt class="col-sm-3">Article number</dt>
                        <dd class="col-sm-9">596 065</dd>

                        <dt class="col-sm-3">Guarantee</dt>
                        <dd class="col-sm-9">2 year</dd>

                        <dt class="col-sm-3">Delivery time</dt>
                        <dd class="col-sm-9">3-4 days</dd>

                        <dt class="col-sm-3">Availabilty</dt>
                        <dd class="col-sm-9">in Stock</dd>
                    </dl>

                    <div class="form-row  mt-4">
                        <div class="form-group col-md flex-grow-0">
                            <div class="input-group mb-3 input-spinner">
                                <div class="input-group-prepend">
                                    <button class="btn btn-light" type="button" id="button-plus"> + </button>
                                </div>
                                <input type="text" class="form-control quantity-input" value="1">
                                <div class="input-group-append">
                                    <button class="btn btn-light" type="button" id="button-minus"> &minus; </button>
                                </div>
                            </div>
                        </div> <!-- col.// -->
                        <div class="form-group col-md">
                            <button class="btn btn-primary add-to-cart-btn">
                                <i class="fas fa-shopping-cart"></i> <span class="text">Thêm vào giỏ hàng</span>
                            </button>
                            <button class="btn btn-light">
                                <i class="fas fa-envelope"></i> <span class="text">Liên hệ</span>
                            </button>
                        </div> <!-- col.// -->
                    </div> <!-- row.// -->

                </article> <!-- product-info-aside .// -->
            </main> <!-- col.// -->
        </div> <!-- row.// -->
        <!-- ================ ITEM DETAIL END .// ================= -->


    </div> <!-- container .//  -->
</section>
<!-- ========================= SECTION CONTENT END// ========================= -->
