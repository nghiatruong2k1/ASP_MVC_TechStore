
@{
    ViewBag.Title = "Giỏ hàng";
}
@model List<ASP_MVC_Shop.Models.CartModel>
<!-- ========================= SECTION CONTENT ========================= -->
<section class="section-content padding-y" id="cart-content">
    <div class="container">
        <div class="row">
            <main class="col-md-9">
                <div class="card">

                    <table class="table table-borderless table-shopping-cart">
                        <thead class="text-muted">
                            <tr class="small text-uppercase">
                                <th scope="col">Sản phẩm</th>
                                <th scope="col" width="120">Số lượng</th>
                                <th scope="col" width="200">Giá</th>
                                <th scope="col" class="text-right" width="200"> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="cart-product border-bottom" data-id="@item.id">
                                    <td>
                                        <figure class="itemside">
                                            <div class="aside"><img src="@item.imageUrl" class="img-sm contain"></div>
                                            <figcaption class="info">
                                                <a href="#" class="title text-dark">@item.name</a>
                                                <p class="text-muted small">Danh mục: @item.categoryName</p>
                                                <p class="text-muted small">Thương hiệu: @item.brandName</p>
                                                <p class="text-muted small">Loại:@item.typeName</p>
                                            </figcaption>
                                        </figure>
                                    </td>
                                    <td>
                                        <input type="number" name="quantity" class="quantity-input form-control" value=@item.quantity />
                                    </td>
                                    <td>
                                        <div class="price-wrap">
                                            @if (item.salePrice != null && item.salePrice > 0)
                                            {
                                                <var class="price">@string.Format("{0:#,0}", @item.salePrice) đ</var>
                                                <small class="text-muted">@string.Format("{0:#,0}", @item.price) đ</small>
                                            }
                                            else
                                            {
                                                <var class="price mt-1">@string.Format("{0:#,0}", @item.price) đ</var>
                                            }
                                        </div>
                                    </td>
                                    <td class="text-right">
                                        <button title="Thêm vào yêu thích" data-toggle="tooltip" class="btn btn-light" ><i class="fa fa-heart"></i></button>
                                        <button title="Xóa sản phẩm" data-toggle="tooltip" class="btn btn-light delete-btn"><i class="fas fa-trash-alt"></i></button>
                                    </td>
                                </tr>
                            }
                            <tr>
                                <td scope="col" colspan="4">
                                    <div class="d-none justify-content-center align-items-center"id="empty-data"style="font-size:3em">
                                        <i class="fas fa-shopping-cart mx-3" style="width:1em;height:1em;font-size:1.4em;"></i>
                                        <span>Giỏ hàng trống</span>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>

     
                </div> <!-- card.// -->

                <div class="alert alert-success mt-3">
                    <p class="icontext"><i class="icon text-success fa fa-truck"></i>Giao hàng miễn phí trong vòng 1-2 tuần</p>
                </div>

            </main> <!-- col.// -->
            <aside class="col-md-3">
                <div class="card mb-3">
                    <div class="card-body">
                        <form id="form-voucher">
                            <div class="form-group">
                                <label>Mã giảm giá:</label>
                                <div class="input-group">
                                    <input required type="text" class="form-control" name="voucher"data-voucher="0" placeholder="Mã giảm giá">
                                    <span class="input-group-append">
                                        <button class="btn btn-primary"type="submit">Áp dụng</button>
                                    </span>
                                </div>
                            </div>
                        </form>
                    </div> <!-- card-body.// -->
                </div>  <!-- card .// -->
                <div class="card mb-3">
                    <div class="card-body">
                        <dl class="dlist-align">
                            <dt>Giá tiền:</dt>
                            <dd class="text-right" id="cart-price">0 đ</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Giảm giá:</dt>
                            <dd class="text-right" id="cart-discount">0 đ</dd>
                        </dl>
                        <dl class="dlist-align">
                            <dt>Tổng cộng:</dt>
                            <dd class="text-right  h5" id="cart-total">0 đ</dd>
                        </dl>
                        <hr>
                        <p class="text-center mb-3">
                            <img src="~/Content/images/misc/payments.png" height="26">
                        </p>

                    </div> <!-- card-body.// -->
                </div>  <!-- card .// -->
                <div class="card mb-3">
                    <div class="card-body">
                        <a href=@Url.Action("payment","cart") class="btn btn-primary float-md-right payment-btn"> Thanh toán <i class="fa fa-chevron-right"></i> </a>
                        <a href=@Url.Action("","") class="btn btn-light"> <i class="fa fa-chevron-left"></i> Quay lại</a>
                    </div>
                </div>
            </aside> <!-- col.// -->
        </div>

    </div> <!-- container .//  -->
</section>
